<% content_for :left_side do %>
  <%= render 'left_side' %>
<% end %>

<p id="notice"><%= notice %></p>
<h1 class="text-center">Pacientes</h1>
<div class="box box-primary container box-body">

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Matricula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.id %></td>
        <td><%= paciente.nome %></td>
        <td><%= paciente.matricula %></td>
        <td class="col-xs-1">
          <%= link_to paciente_path(paciente) do %>
            <i class="fa fa-2x fa-eye"></i>
          <% end %>
        </td>
        <td class="col-xs-1">
          <%= link_to edit_paciente_path(paciente) do %>
            <i class="fa fa-2x fa-edit"></i>
          <% end %>
        </td>
        <td class="col-xs-1">
          <%= link_to paciente_path(paciente), method: :delete, data: {confirm: "Voce tem certeza?"} do %>
            <i class="fa fa-2x fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Novo Paciente', new_paciente_path %>
