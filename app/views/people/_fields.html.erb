<div class="form-group">
  <%= p.label :full_name %>
  <%= p.text_field :full_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= p.label :birth_date %>
  <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
    <%= p.text_field :birth_date, class: 'form-control pull-right' %>
</div>
</div>

<div class="form-group">
  <%= p.label :cpf %>
  <%= p.text_field :cpf, class: 'form-control' %>
</div>

<div class="form-group">
  <%= p.label :home_phone %>
  <%= p.text_field :home_phone, class: 'form-control' %>
</div>

<div class="form-group">
  <%= p.label :mobile_phone %>
  <%= p.text_field :mobile_phone, class: 'form-control' %>
</div>

<div class="form-group">
  <%= p.label :rg %>
  <%= p.text_field :rg, class: 'form-control' %>
</div>

<script>
    $('.input-group.date').datepicker({
    	format: 'dd/mm/yyyy',
    	language: 'pt-BR',
    	todayHighlight: true
    });
</script>
